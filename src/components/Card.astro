---
interface Props {
	title: string;
	body: string;
	href: string;
	image: string;
}

const { href, title, image } = Astro.props;
---

<main class="flex-grow flex justify-center"> 
	<li class=" justify-center bg-white border-complement text-lg list-none mx-16 sm:mx-8 md:mx-32 my-4 p-2 border-4 rounded-lg hover:text-accentdark">
		<a href={href} class="">
			<div class="my-2 md:my-4 font-bold text-base sm:text-lg md:text-xl lg:text-2xl flex justify-center hover:text-accent">
				{title}
			</div>
			<div class="text-base sm:text-lg md:text-xl lg:text-2xl">
				{image && (
					<img
						class="w-400 h-300 rounded-3xl mx-auto"
						src={image}
						alt={title}
					/>
				)}
			</div>
		</a>
	</li>
</main>
